<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>DEMO</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
<h1><%=msg%></h1>
<p><%= name%> </p>
<p id="userMsg"></p>

<div class="container mt-5">
  <h2 class="text-center mb-4">Personal information</h2>

    <form name-="basic" id="basic" method="post" action="/post/form"> 
    <div class="row mb-3">
    <div class="col-md-6">

    <label for="userName" class="form-label">Your Name</label>
    <input type="text" class="form-control" id="userName" placeholder="Enter your name">
    </div>

    <div class="col-md-6">
    <label for="usermothername" class="form-label">Mother name</label>
    <input type="text" class="form-control" id="usermothername" placeholder="Enter your mother name">
    </div>
    </div>


    <div class="row mb-3">
    <div class="col-md-6">

    <label for="userEmail" class="form-label">Email address</label>
    <input type="email" class="form-control" id="userEmail" placeholder="Enter your email">
    </div>

    <div class="col-md-6">
    <label for="useradhardetails" class="form-label">Adhar number</label>
    <input type="number" class="form-control" id="useradhardetails" placeholder="Enter your adhar number">
    </div>
    </div>

    <div class="row mb-3">
    <div class="col-md-6">

    <label for="usermobilenumber" class="form-label">Mobile number</label>
    <input type="number" class="form-control" id="usermobilenumber" placeholder="Enter your mobile number">
    </div>

    <div class="col-md-6">
    <label for="userpandetails" class="form-label">Pan number</label>
    <input type="text" class="form-control" id="userpandetails" placeholder="Enter your pan number">
    </div>
    </div>
    
    
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>



<script>
  fetch('/api/user')
  .then(function(response) {
    return response.json();
  })
  .then(function(data) {
    document.getElementByID('userName').innertext = data.name;

  })
  .catch(function(error) {
    console.log
  })
</body>
</html>